<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen100"
        android:id="@+id/searchImage"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="@dimen/dimen1"
        android:layout_height="@dimen/dimen80"
        android:background="@color/colorAccent"
        android:alpha="0.4"
        android:id="@+id/borderLl"
        app:layout_constraintStart_toEndOf="@+id/searchImage"
        app:layout_constraintTop_toTopOf="@+id/searchImage"
        app:layout_constraintBottom_toBottomOf="@+id/searchImage"
        android:layout_marginLeft="@dimen/dimen5"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/mTitle"
        app:layout_constraintStart_toEndOf="@+id/borderLl"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/text16"
        android:layout_marginTop="@dimen/dimen10"
        android:layout_marginLeft="@dimen/dimen10"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/mDescription"
        app:layout_constraintStart_toEndOf="@+id/borderLl"
        app:layout_constraintTop_toBottomOf="@+id/mTitle"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/text14"
        android:layout_marginTop="@dimen/dimen5"
        android:layout_marginLeft="@dimen/dimen10"
        android:textColor="@color/colorAccent"/>



</androidx.constraintlayout.widget.ConstraintLayout>